{
    "builds": [
        {
            "src": "steel_plant/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "steel_plant/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "steel_plant.settings"
    },
    "postbuild": {
        "command": "python manage.py migrate && python manage.py collectstatic --noinput"
    }
}
